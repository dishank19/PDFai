{
  "manifest_version": 2,
  "name": "PDF LLM Extension",
  "version": "1.0",
  "description": "An extension that allows highlighting text in PDFs and interacting with a large language model.",
  "permissions": [
    "activeTab",
    "https://*/",
    "http://*/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}